#!/usr/bin/env bash

# based on https://hexdocs.pm/phoenix/1.5.12/releases.html

set -e

export MIX_ENV=prod

mix do local.hex --force, local.rebar --force

mix deps.get --only prod

mix compile

npm install

elm package install -y
elm make

./node_modules/.bin/webpack --production --config config/webpack.config.js

mix phx.digest

mix release strobe --overwrite
